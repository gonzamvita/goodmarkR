<h2>Sign up</h2>

<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'col s12'}) do |f| %>
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
        <%= f.text_field :first_name, autocomplete: "off", autofocus: true %>
        <%= f.label :first_name %>
      </div>
      <div class="input-field col s6">
        <%= f.text_field :last_name, autocomplete: "off" %>
        <%= f.label :last_name %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">email</i>
        <%= f.email_field :email %>
        <%= f.label :email %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">lock</i>
        <%= f.password_field :password, autocomplete: "off" %>
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
      <div class="input-field col s6">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <%= f.label :password_confirmation %>
      </div>
    </div>
    <div class="row">
      <button class="btn waves-effect waves-light left" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<div class="row">
  <div class="col s12">
    <%= devise_error_messages! %>
  </div>
</div>
