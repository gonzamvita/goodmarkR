<div class="row">
    <% @bookmarks.each do |bookmark|%>
      <div class="col s12 m6">
        <% if !bookmark.bookmark_types_id.nil? %>
          <div class="card indigo">
            <div class="card-image">
              <img class="responsive-img" src="<%= bookmark.image_url %>">
              <span class="card-title"><%= bookmark.title %></span>
            </div>
            <div class="card-action">
              <%= link_to "#{bookmark.content}", url_with_protocol(bookmark.url_origin), :target => '_blank' %>
            </div>
          </div>
        <% else %>
          <div class="card indigo">
            <div class="card-content white-text">
              <span class="card-title"><%= bookmark.title %></span>
              <p>I am a very simple card. I am good at containing small bits of information.
              I am convenient because I require little markup to use effectively.</p>
            </div>
            <div class="card-action">
              <%= link_to "#{bookmark.content}", url_with_protocol(bookmark.content), :target => '_blank' %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
